#!/bin/bash

CMD="/home/km/km.py "

if [[ -v DATA ]]; then CMD="$CMD --datafile $DATA "; fi

if [[ -v TEST ]]; then
    echo ""
    echo "!! TEST MODE !!  (log to stderr and no syslg)"
    echo ""
    CMD="$CMD --debug --datafile km-test.data.gpg --db-filename kcore_auth_db-test.data.gpg --logfile -"
else
    CMD="$CMD --logfile /var/log/km/km.log --syslog"
fi

echo "init transferring to: $CMD"
exec $CMD
